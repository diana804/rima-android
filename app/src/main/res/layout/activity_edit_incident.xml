<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#202732"
    tools:context=".EditIncident">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Incidente"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/type_incidents_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:hint="Titulo"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:gravity="start|top"
        android:hint="DescripciÃ³n"
        android:inputType="textMultiLine" />

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/btnEditIncidente"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/button_rounded"
        android:text="Editar"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"/>

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/btnEliminarIncidente"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:textSize="16sp"
        android:background="@drawable/button_rounded_border"
        android:text="Eliminar Alerta" />

    <TextView
        android:id="@+id/id"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    </LinearLayout>

</LinearLayout>